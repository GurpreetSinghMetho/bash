<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorAccent">@color/blackTransaparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/blackTransaparent
        </item>
        <item name="android:fontFamily">@font/normal</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
    </style>

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="CustomDatePickerDialogTheme" parent="@android:style/Widget.DatePicker">

    </style>

    <style name="SpinnerTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="themeDialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
</resources>
